{
  "name": "ai-habitat-simulation-engine",
  "version": "1.0.0",
  "description": "A 2.5D isometric game for learning AI alignment through emergent storytelling",
  "main": "src/index.ts",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:clean && npm run build:compile && npm run build:optimize",
    "build:clean": "rm -rf dist",
    "build:compile": "tsc && vite build",
    "build:optimize": "node scripts/build-optimizer.js",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "preview": "vite preview",
    "deploy:staging": "npm run build && npm run deploy:upload -- staging",
    "deploy:production": "npm run build && npm run deploy:upload -- production",
    "deploy:upload": "node scripts/deploy.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:compatibility": "node scripts/test-compatibility.js",
    "serve:local": "npx http-server dist -p 8080 -c-1"
  },
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/three": "^0.158.3",
    "@vitest/coverage-v8": "^3.2.4",
    "cannon-es": "^0.20.0",
    "dayjs": "^1.11.18",
    "gsap": "^3.12.2",
    "immer": "^10.1.3",
    "lodash": "^4.17.21",
    "pixi.js": "^8.13.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "three": "^0.158.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^1.0.0",
    "c8": "^8.0.1",
    "eslint": "^8.54.0",
    "happy-dom": "^12.10.3",
    "puppeteer": "^21.5.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-bundle-analyzer": "^0.7.0",
    "vitest": "^1.0.0"
  },
  "type": "module",
  "license": "MIT"
}
